@model IEnumerable<Movies_portal_MVC5.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers List</h2>
@Html.ActionLink("Add New Customer","New",new {are="" },new {@class="btn btn-primary"})
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Membership Type</th>
            <th>Discount Rate</th>
        </tr>
    </thead>
    <tbody>
        
            @foreach (var customer in Model)
            {
        <tr>
            <td>
                @Html.ActionLink(customer.Name, "Details", "Customers", new { customer.Id }, new { area = "" })
            </td>
            <td>
                @customer.MembershipType.Name
            </td>
            <td>
                @customer.MembershipType.DiscountRate%
            </td>

        </tr>
            }
    </tbody>
</table>

