@model IEnumerable<Movies_portal_MVC5.Models.Movies>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<table class="table table-bordered table-hover">
    <thead>
    <tr><td class="font-weight-bold">Movies Name</td>
        <td class="font-weight-bold">Genre</td>
        
    </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {

            <tr>
                <td>@Html.ActionLink(movie.Name, "Details",new {@Id=movie.Id },new {area="" })</td>
                <td>@movie.MovieGenre.Name</td>
            </tr>
        }
    </tbody>
</table>

